{
  "kind": "collectionType",
  "collectionName": "podcasts",
  "info": {
    "singularName": "podcast",
    "pluralName": "podcasts",
    "displayName": "Podcast",
    "description": "ポッドキャストエピソード"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "audioFile": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["audios"]
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "duration": {
      "type": "string",
      "required": true
    },
    "episodeNumber": {
      "type": "integer",
      "required": true
    },
    "guests": {
      "type": "json"
    },
    "category": {
      "type": "string",
      "required": true
    },
    "plays": {
      "type": "integer",
      "default": 0
    },
    "publishedDate": {
      "type": "datetime"
    }
  }
}